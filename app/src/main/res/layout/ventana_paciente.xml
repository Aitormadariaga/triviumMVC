<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Barra superior: nombre paciente + botones -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?attr/colorSurface"
        android:elevation="2dp">

        <TextView
            android:id="@+id/nombrePaciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="No Hay Paciente Seleccionado"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/crear_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Paciente"
            app:cornerRadius="12dp"
            style="@style/Widget.Trivium.Button.Tonal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_verLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Ver Lista"
            app:cornerRadius="12dp"
            style="@style/Widget.Trivium.Button.Outlined" />

    </LinearLayout>

    <!-- ================================================ -->
    <!-- SECCIÓN 1: Formulario crear/editar paciente      -->
    <!-- ================================================ -->
    <ScrollView
        android:id="@+id/PacienteScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/grupoCrearPac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datos del Paciente"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- DNI -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DNI (obligatorio)"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editDNI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Nombre -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Nombre (obligatorio)"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Apellido 1 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Primer apellido (obligatorio)"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editApellido1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Apellido 2 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Segundo apellido"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editApellido2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- CIC -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="CIC"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCIC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Patología -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Patología"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPatologia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Medicación -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Medicación"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editMedicacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Intensidad -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Intensidad"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editIntensidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tiempo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Tiempo (minutos)"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTiempo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Intensidad 2 (oculto por defecto) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilIntensidad2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Intensidad 2"
                        android:visibility="gone"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editIntensidad2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tiempo 2 (oculto por defecto) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTiempo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Tiempo 2 (minutos)"
                        android:visibility="gone"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTiempo2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón guardar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuardar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:text="Guardar"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Trivium.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </ScrollView>

    <!-- ================================================ -->
    <!-- SECCIÓN 2: Detalles del paciente seleccionado    -->
    <!-- ================================================ -->
    <ScrollView
        android:id="@+id/detallesScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/detallesPacienteLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTituloPaciente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Detalles del Paciente"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDNI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="DNI: "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/tvCIC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="CIC: "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/tvNombreCompleto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="Nombre: "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/tvPatologia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="Patología: "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/tvMedicacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="Medicación: "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/tvIntensidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="Intensidad: "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/tvTiempo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="Tiempo (min): "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/tvIntensidad2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="Intensidad2: "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvTiempo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:text="Tiempo2 (min): "
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de acción -->
            <LinearLayout
                android:id="@+id/botonesAccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardDetalles"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editarPaciente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Editar"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Trivium.Button.Tonal" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerHistorico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="Histórico"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Trivium.Button.Outlined" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/borrarPaciente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Borrar"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Trivium.Button.Error" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciarTratamiento"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/botonesAccion"
                android:layout_marginTop="12dp"
                android:text="Iniciar Tratamiento"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                style="@style/Widget.Trivium.Button" />

        </RelativeLayout>

    </ScrollView>

    <!-- ================================================ -->
    <!-- SECCIÓN 3: Lista de pacientes                    -->
    <!-- ================================================ -->
    <RelativeLayout
        android:id="@+id/listaLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        android:visibility="gone">

        <ListView
            android:id="@+id/listaPacientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/botonBuscar"
            android:layout_marginBottom="8dp"
            android:divider="?attr/colorOutlineVariant"
            android:dividerHeight="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Buscar"
            app:cornerRadius="12dp"
            style="@style/Widget.Trivium.Button.Tonal" />

    </RelativeLayout>

</RelativeLayout>